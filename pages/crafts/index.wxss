.crafts-content-panel {
  padding: 24rpx;
}
.crafts-table {
  display: table;
  border-collapse: collapse;
  min-width: 702rpx;
}
.table-tr {
  display: table-row;
}
.table-th, .table-td {
  display: table-cell;
  font-size: 24rpx;
  border: 1px solid #ccc;
  padding: 12rpx;
}
.table-th {
  font-weight: 500;
  text-align: center;
}
.type {
  min-width: 160rpx;
}
.class {
  min-width: 80rpx;
}
.capacity {
  min-width: 60rpx;
}
.range {
  min-width: 100rpx;
}
.effi {
  min-width: 120rpx;
}
.speed {
  min-width: 80rpx;
}
.price {
  min-width: 80rpx;
}
.intr, .end {
  min-width: 120rpx;
}
