/* pages/navigation/index.wxss */
.nav-header {
  background: #ccc;
  padding: 0;
}
.header-image {
  width: 750rpx;
  height: 400rpx;
}
.title {
  text-align: center;
  font-size: 42rpx;
  margin: 30rpx 0;
  font-weight: 300;
}
.nav-content-panel {
  padding: 24rpx;
}
.nav-content-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.nav-link-item {
  text-align: center;
  width: 340rpx;
  height: 340rpx;
  background: #ddd;
  position: relative;
  overflow: hidden;
}
.nav-item-image {
  position: absolute;
  width: 340rpx;
  height: 340rpx;
  left: 0;
  top: 0;
}
.nav-mask {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: #000;
  opacity: 0.61;
}
.nav-link-text {
  position: absolute;
  color: #fff;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  font-size: 40rpx;
  font-weight: 300;
}